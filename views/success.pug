include includes/head.pug
body
    .section
        .container
            h1.title(style='display:flex') Banano Forager
                img(src='https://banano.cc/presskit/banano-icon.svg' width='40em' height='40em' style='margin-left:15px')
            h2.subtitle 1 Banana = 1 Banano
            article.message.is-success
                .message-header
                    p Your Banano has been sent.
                .message-body
                    span.icon-text
                        span.icon
                            i.fa-solid.fa-qrcode
                        span Transaction ID: 
                            a(href=`https://creeper.banano.cc/hash/${transactionId}`) #{transactionId}
                    br
                    span.icon-text
                        span.icon
                            i.fa-solid.fa-paper-plane-top
                        span Sent #{amount} BAN to address #{address}
                    br
                    span.icon-text
                        span.icon
                            i.fa-solid.fa-microchip-ai
                        span Image classification result: 
                    br
                    p #{JSON.stringify(result[0])}
                    p #{JSON.stringify(result[1])}
                    p #{JSON.stringify(result[2])}

include includes/footer.pug